---
const projects = [
  {
    title: "TGCloud",
    description:
      "TGCloud is a secure and reliable cloud storage solution built on top of Telegram's infrastructure.",
    link: "https://yourtgcloud.vercel.app/",
  },
  {
    title: "Cligram",
    description:
      "A CLI-based Telegram client built for power users who prefer the terminal.",
    link: "https://github.com/Kumneger0/Cligram",
  },
  {
    title: "Tibebjs",
    description:
      "A lightweight and minimal JavaScript runtime built with Go, Just a fun little hobby project exploring the idea of rolling my own JavaScript runtime!",
    link: "https://github.com/Kumneger0/Tibebjs",
  },
  {
    title: "ReactBunode",
    description: "A tool for building static sites with React and Bun",
    link: "https://reactbunode.pages.dev/",
  },
] satisfies {
  title: string;
  description: string;
  link: string;
}[];
---

<div
  class="rounded-lg border border-gray-200 dark:border-gray-700 p-6 mb-6 bg-white dark:bg-gray-900/50 transition-colors duration-200"
>
  <h2 class="text-xl font-bold mb-4 dark:text-white">Open Source Projects</h2>
  <div class="space-y-4 mb-4">
    {
      projects.map((project) => (
        <a
          target="_blank"
          href={project.link}
          class="block hover:bg-gray-50 dark:hover:bg-gray-700 rounded-lg p-3 -mx-3 transition-colors duration-300"
        >
          <div class="flex items-start justify-between gap-2">
            <div>
              <h3 class="font-medium text-gray-900 dark:text-white flex items-center gap-2">
                {project.title}
                {/* <ExternalLink size={14} class="text-gray-400 dark:text-gray-500" /> */}
              </h3>
              <p class="text-gray-600 dark:text-gray-400 text-sm mt-1">
                {project.description}
              </p>
            </div>
          </div>
        </a>
      ))
    }
  </div>
  <div class="text-center">
    <a
      href="https://github.com"
      target="_blank"
      rel="noopener noreferrer"
      class="inline-flex items-center gap-2 text-blue-600 hover:text-blue-800 dark:text-blue-400 dark:hover:text-blue-300 hover:underline transition-colors duration-300"
    >
      View more projects on GitHub
      <!-- <ArrowRight size={16} /> -->
    </a>
  </div>
</div>
