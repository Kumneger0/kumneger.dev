---
import { NAVIGATION } from "@/consts";
import ThemeSwitcher from "@/react/ThemeSwitcher";
import HeaderLink from "./HeaderLink.astro";
import Logo from "./Logo.astro";
---

<header
  class="flex items-center justify-between py-10 max-w-6xl w-11/12 mx-auto"
>
  <div class="mr-3 md:w-40 w-20">
    <a href="/" aria-label={"Kumneger Wondimu"}>
      <Logo class="w-full" />
    </a>
  </div>
  <div class="flex items-center leading-5 space-x-4">
    {
      NAVIGATION.filter((link) => link.href !== "/").map((link) => (
        <HeaderLink
          href={link.href}
          class="block font-medium text-gray-900 dark:text-gray-100"
        >
          {link.title}
        </HeaderLink>
      ))
    }
    <div class="flex gap-4 items-center">
      <ThemeSwitcher client:only="react" />
    </div>
  </div>
</header>
