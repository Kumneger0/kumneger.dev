---
import Link from "./Link.astro";

interface Props {
  title: string;
  description: string;
  imgSrc?: string;
  href?: string;
}

const { title, description, imgSrc, href } = Astro.props;
---

<div class="md max-w-[544px] p-4 md:w-1/2">
  <div
    class:list={`${imgSrc && "h-full"} overflow-hidden min-h-[250px] rounded-md border-2 border-gray-200 border-opacity-60 dark:border-gray-700`}
  >
    <div class="p-6">
      <h2 class="mb-3 text-2xl font-bold leading-8 tracking-tight">
        {href ? <Link href={href}>{title}</Link> : title}
      </h2>
      <p
        class="prose mb-3 min-h-32 max-w-none text-gray-500 dark:text-gray-400"
        set:html={description}
      />

      {
        href && (
          <Link
            href={href}
            class="text-base font-medium leading-6 text-primary-500 hover:text-primary-600 dark:hover:text-primary-400"
          >
            Checkout Project &rarr;
          </Link>
        )
      }
    </div>
  </div>
</div>
